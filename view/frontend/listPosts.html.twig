{% extends "layout.html.twig" %}

{% block title %}
	<h1>Articles</h1>
	<span class="subheading"></span>
{% endblock %}

{% block content %}
	<!-- Main Content-->
	{% for post in listPosts %}
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="post-preview">
						<a href="index.php?action=post&amp;post_id={{ post.postId }}">
							<h2 class="post-title">{{post.title}}</h2>
							<h3 class="post-subtitle">{{post.chapo}}</h3>
						</a>
						<p class="post-meta">
							Posted by
							<a href="#!">Bérengère
							</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
	<hr class="my-4"/>
	<div class="d-flex justify-content-end mb-4">
		{% if session.user_status == 'admin' %}
			<a class="btn btn-primary text-uppercase" href="index.php?action=addFormPost">Ajouter un article →</a>
		{% endif %}
	</div>
{% endblock %}
