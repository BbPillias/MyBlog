{% extends "layout.html.twig" %}

{% block title %}
	<h1>
		Modifier un commentaire
	</h1>
	<span class="subheading"></span>
{% endblock %}

{% block content %}

	<main class="mb-4">
		<a class="btn text-uppercase" href="index.php?action=post&amp;post_id={{ post.post_id }}">Retour article</a>
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="my-5">
						<form id="contactForm" method="POST" action="index.php?action=updateComment&amp;post_id={{post.post_id}}&amp;comment_id={{comment.comment_id}}&amp;">
							<input type="hidden" name="comment_id" value="{{ comment.comment_id }}">
							<div class="form-floating">
								<input class="form-control" id="comment" type="textarea" name="comment" value="{{comment.comment}}" placeholder="Commentaire" data-sb-validations="required"/>
								<label for="title">Commentaire</label>
								<div class="invalid-feedback" data-sb-feedback="name:required">{{comment.comment}}</div>
							</div>
							<input type="hidden" name="comment_date" value="{{ comment.comment_date }}">
							<input type="hidden" name="is_valid" value="{{ comment.is_valid }}">
							<input type="hidden" name="posts_post_id" value="{{ comment.posts_post_id }}">
							<input type="hidden" name="users_user_id" value="{{ comment.users_user_id }}">
							<br/>
							<input type="submit" name="button" value="Enregistrer"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
